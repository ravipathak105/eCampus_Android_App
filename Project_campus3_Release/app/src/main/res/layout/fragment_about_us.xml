<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e1d6d6"
    android:orientation="vertical"
    tools:context="com.myecampus.ravi.project_e_campus.AboutUs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            app:cardCornerRadius="4dp"
            android:id="@+id/aboutuscard"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Partners:"
                android:layout_gravity="center_horizontal"
                android:textSize="25dp"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:fontFamily="serif-monospace" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_marginTop="70dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/ravi"
                    android:src="@drawable/ravipa"
                    />

                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="18dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:drawableStart="@drawable/ic_action_mee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ravi Pathak"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="75dp"
                    android:textColor="#000"
                    android:id="@+id/developer"
                    android:layout_marginLeft="200dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developer"
                    android:textStyle="normal|bold"
                    android:fontFamily="serif-monospace" />
            </LinearLayout>
            <TextView
                android:layout_marginLeft="170dp"
                android:layout_marginTop="130dp"
                android:textSize="16dp"
                android:drawableStart="@drawable/ic_action_mob"
                android:textColor="#000"
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9458708033"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mee"
                >
            <ImageView
                android:layout_marginLeft="150dp"
                android:layout_marginTop="170dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/fb"
                android:src="@drawable/fb"
                />
            <ImageView
                android:layout_marginLeft="200dp"
                android:layout_marginTop="170dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/insta"
                android:id="@+id/insta"
                />
            <ImageView
                android:layout_marginLeft="250dp"
                android:layout_marginTop="170dp"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:id="@+id/gmail"
                android:src="@drawable/gmail"
                />
            <ImageView
                android:layout_marginLeft="300dp"
                android:layout_marginTop="175dp"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:id="@+id/linkedin"
                android:src="@drawable/linkedin"
                ></ImageView>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_marginTop="285dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/aimanf"
                    />
                <TextView
                    android:layout_marginTop="320dp"
                    android:layout_marginLeft="18dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:drawableStart="@drawable/ic_action_mee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aiman Firoz"
                    />



            </LinearLayout>

            <TextView
                android:layout_marginTop="450dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Guide:"
                android:layout_gravity="center_horizontal"
                android:textSize="25dp"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:fontFamily="serif-monospace" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_marginTop="500dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"

                    android:src="@drawable/mammmm"
                    />
                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="500dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"

                    android:src="@drawable/sir"
                    />
            </LinearLayout>
            <TextView
                android:layout_marginTop="670dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Ms. Akanksha Singh"
                />
            <TextView
                android:layout_marginTop="690dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Asst. Professor"
                />
            <TextView
                android:layout_marginTop="670dp"
                android:layout_marginLeft="200dp"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Mr. Malay Tripathi"
                />
            <TextView
                android:layout_marginTop="690dp"
                android:layout_marginLeft="200dp"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Asst. Professor"
                />
            <TextView
                android:layout_marginTop="710dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="SRMSCET"
                />
            <TextView
                android:layout_marginTop="710dp"
                android:layout_marginLeft="200dp"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="SRMSCET"
                />

        </android.support.v7.widget.CardView>

    </ScrollView>
</ScrollView>
