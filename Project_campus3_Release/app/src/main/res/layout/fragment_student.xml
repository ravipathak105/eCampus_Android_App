<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e1d6d6"
    tools:context="com.myecampus.ravi.project_e_campus.Student">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/studentcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="25dp"
        android:textColor="#165906"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Section:"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:fontFamily="serif-monospace" />
        <TextView
            android:layout_marginTop="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 1. Here you can store your own information."
            android:textSize="16dp"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:fontFamily="serif-monospace" />
        <TextView
            android:layout_marginTop="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2. You can set Reminders for any Event."
            android:textSize="16dp"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:fontFamily="serif-monospace" />
        <TextView
            android:layout_marginTop="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 3. Admin can not access your information."
            android:textSize="16dp"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:fontFamily="serif-monospace" />
        <TextView
            android:layout_marginTop="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 4. You have to remember your UserId as well as your password"
            android:textSize="16dp"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:fontFamily="serif-monospace" />
        <TextView
            android:layout_marginTop="350dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 5. In case if you forgot your UserId or Password,then you can't access your account."
            android:textSize="16dp"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:fontFamily="serif-monospace" />

        <TextView
            android:layout_marginTop="420dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 7. If you forget your credentials,then you have to create new account."
            android:textSize="16dp"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:fontFamily="serif-monospace" />
        <TextView
            android:layout_marginTop="515dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#047000"
            android:text=" Click on I Agree Button to access Personal section."
            android:textSize="16dp"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:fontFamily="serif-monospace" />

        <Button
            android:layout_marginTop="565dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="I Agree"
            android:drawableStart="@drawable/ic_action_tick"
            android:id="@+id/stuagree" />



    </android.support.v7.widget.CardView>

    </ScrollView>
</ScrollView>
