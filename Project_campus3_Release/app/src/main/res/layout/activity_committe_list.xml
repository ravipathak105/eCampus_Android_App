<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_committe_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="#ffffff"
    tools:context="com.myecampus.ravi.project_e_campus.CommitteList">
  <android.support.v7.widget.CardView
      android:layout_margin="1dp"
      app:cardBackgroundColor="#f1282827"

      app:cardCornerRadius="4dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:layout_gravity="center">


    <LinearLayout
      android:layout_marginTop="20dp"
      android:clipToPadding="false"
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/bankcardId"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#FFFCF4F4"
        android:layout_margin="10dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/informals"
          android:orientation="vertical"
          android:gravity="center">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circlebackgroundyellow"
            android:src="@drawable/ic_action_informals"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Informals"/>


      </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="100dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#FFFCF4F4"
        android:layout_height="100dp"
        android:layout_margin="10dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:id="@+id/Finearts"
          android:gravity="center">
        <ImageView
            android:layout_width="64dp"
            android:background="@drawable/circlebackgroundpink"
            android:layout_height="64dp"
            android:src="@drawable/ic_action_brush"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Fine Arts"/>


      </LinearLayout>
    </android.support.v7.widget.CardView>

  </LinearLayout>

  <LinearLayout
      android:clipToPadding="false"
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="100dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#FFFCF4F4"
        android:layout_height="100dp"
        android:layout_margin="10dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/registration"
          android:orientation="vertical"
          android:gravity="center">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circlebackgroundgreen"
            android:src="@drawable/ic_stagedeco"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Stage Deco"/>


      </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="100dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#FFFCF4F4"
        android:layout_height="100dp"
        android:layout_margin="10dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/judgement"
          android:orientation="vertical"
          android:gravity="center">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circlebackgrounddark"
            android:src="@drawable/ic_renaissance"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Renaissance"/>


      </LinearLayout>
    </android.support.v7.widget.CardView>




  </LinearLayout>
  <LinearLayout
      android:clipToPadding="false"
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"

        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#FFFCF4F4"
        android:layout_margin="10dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/dance"
          android:orientation="vertical"
          android:gravity="center">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circlebackgrounddark"
            android:src="@drawable/ic_action_dance"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Dance"/>


      </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="100dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#FFFCF4F4"
        android:layout_height="100dp"
        android:layout_margin="10dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:id="@+id/music"
          android:gravity="center">
        <ImageView
            android:layout_width="64dp"
            android:background="@drawable/circlebackgroundgreen"
            android:layout_height="64dp"
            android:src="@drawable/ic_action_music"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Music"/>


      </LinearLayout>
    </android.support.v7.widget.CardView>

  </LinearLayout>

  <LinearLayout
      android:clipToPadding="false"
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="100dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#FFFCF4F4"
        android:layout_height="100dp"
        android:layout_margin="10dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/deco"
          android:orientation="vertical"
          android:gravity="center">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circlebackgroundpink"
            android:src="@drawable/ic_action_deco"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Deco"/>


      </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="100dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#FFFCF4F4"
        android:layout_height="100dp"
        android:layout_margin="10dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/firstaid"
          android:orientation="vertical"
          android:gravity="center">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circlebackgroundyellow"
            android:src="@drawable/ic_action_first"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="First Aid"/>


      </LinearLayout>
    </android.support.v7.widget.CardView>




  </LinearLayout>







</LinearLayout>
    </android.support.v7.widget.CardView>
  </LinearLayout>
