<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_literary_club"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myecampus.ravi.project_e_campus.LiteraryClub">
    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rishabh Saxena"

        android:layout_gravity="center_horizontal"

        android:textSize="25sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Chair Person)"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"

        />

    <Button
        android:layout_marginTop="150dp"
        android:textColor="@color/white"
        android:background="@drawable/notification"
        android:drawableStart="@drawable/ic_notii"
        android:text="Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lnoti" />

    <Button
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_regg"
        android:textColor="@color/white"
        android:background="@drawable/regnn"
        android:text="Registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regist" />


</LinearLayout>
