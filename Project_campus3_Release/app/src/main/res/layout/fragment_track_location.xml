<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e1d6d6"
    android:orientation="vertical"
    tools:context="com.myecampus.ravi.project_e_campus.TrackLocation">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:id="@+id/locationcard"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/clg"
            android:id="@+id/clglogo"
            />
        <TextView
            android:layout_marginTop="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000"
            android:text="Difficulties In Finding College??"
            android:fontFamily="serif-monospace"
            android:textStyle="normal|bold"
            android:textAllCaps="true" />
        <TextView
            android:layout_marginTop="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#000"
            android:text="Click On TRACK COLLEGE Button"
            android:fontFamily="serif-monospace"
            android:textStyle="normal|bold"
            android:textAllCaps="true" />


    <Button
        android:layout_marginTop="450dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button"
        android:drawableStart="@drawable/ic_action_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Track College"
        android:id="@+id/track" />
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>