<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e1d6d6"
    tools:context="com.myecampus.ravi.project_e_campus.Share">

    <android.support.v7.widget.CardView
        android:layout_margin="14dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/sharecard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ecampus"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="150dp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:text="Please Share This App As Much As You Can!!"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:fontFamily="serif-monospace" />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawableStart="@drawable/ic_action_web"
            android:layout_height="30dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="#e1d6d6"
            android:layout_marginTop="250dp"
            android:id="@+id/link" />
        <Button
            android:layout_marginTop="310dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_action_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy Link"
            android:id="@+id/copybtn" />
        <TextView
            android:layout_marginTop="400dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Still Using Older Version?? Click on update button to update App"

            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:fontFamily="serif-monospace" />
        <Button
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_marginTop="450dp"
            android:drawableStart="@drawable/ic_action_update"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Update"
            android:id="@+id/update" />
        <TextView
            android:layout_marginTop="520dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_height="wrap_content"
            android:text="After Downloading Finish.Click on Downloads Button to open App "
            android:textStyle="normal|bold"
            android:textAllCaps="true" />
        <Button
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="565dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downloads"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_action_folder"
            android:id="@+id/downloads" />
        <ImageView
            android:layout_marginTop="640dp"
            android:layout_width="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="60dp"
            android:src="@drawable/thanks"
            android:id="@+id/thank" />
        <TextView
            android:layout_marginTop="665dp"
            android:layout_gravity="right"
            android:textColor="#000"
            android:textSize="18dp"
            android:id="@+id/myname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~ Ravi Pathak"
            android:fontFamily="cursive" />
     </android.support.v7.widget.CardView>

</ScrollView>
